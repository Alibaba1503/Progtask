<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/tasklist.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:500&display=swap" rel="stylesheet">
    <title>tasklist</title>
</head>
<body>
    <header class="header_bar">
        <a class="home-page" href="/user/<%= user.id %>">PROGTASK</a>
        <div class="nav-userpage">
            <a href="/user/userpage/<%= user.id %>">USERPAGE</a>
        </div>
        <div class="nav-tasklist">
            <a href="/user/tasklist/<%= user.id %>">TASKLIST</a>
        </div>
        <div class="nav-settings">
            <a href="/user/settings/<%= user.id %>">SETTINGS</a>
        </div>
        <form action="/" method="get">
            <button class="logout">
                <a>logout</a>
            </button>
        </form>
    </header>

    <div class="view-side">
        <h1>Task List</h1>
        <div class="view-box">
        <% tasks.forEach(function( task ) { %>    
            <div class="tasklist">
                <h2 class="list-h2"><%= task.title %></h2>
                <form method="GET" action="/task/tasklist/<%= task._id %>">
                    <button type="submit" class="delete-button"><p>Delete</p></button>
                </form>
            </div>
        <% }); %>
        </div>
    </div>
</body>
</html>