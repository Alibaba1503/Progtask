<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/userpage.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:500&display=swap" rel="stylesheet">
    <title>userpage</title>
</head>
<body>
    <header class="header_bar">
        <a class="home-page" href="/user/<%= user.id %>">PROGTASK</a>
        <div class="nav-userpage">
            <a href="/user/userpage/<%= user.id %>">USERPAGE</a>
        </div>
        <div class="nav-tasklist">
            <a href="/user/tasklist/<%= user.id %>">TASKLIST</a>
        </div>
        <div class="nav-settings">
            <a href="/user/settings/<%= user.id %>">SETTINGS</a>
        </div>
        <form action="/" method="get">
            <button class="logout">
                <a>logout</a>
            </button>
        </form>
    </header>

    <div class="view-side">
        <% if(valiedEmail == true ) { %>
            <div class="error">
                <h2 class="error-text"><strong>Oops!</strong> Email already used</h2>
            </div>
        <% } %>
        <% if(valiedUsername == true ) { %>
            <div class="error">
                <h2 class="error-text"><strong>Oops!</strong> Username already used</h2>
            </div>
        <% } %>
        <h1>USER PAGE</h1>
        <div class="view-box">
            <% if(changingUsername == false) { %> 
                <p class="userinfo">username: <%= user.username %></p>
                <form action="/user/userpage/change-username/<%= user.id %>" method="get">
                    <button class="change" type="submit"><p class="change-p">change</p></button>
                </form>
            <% } else { %>
                <form action="/user/userpage/change-username/<%= user.id %>" method="post">
                    <input type="text" value="<%= user.username %>" name="username">
                    <button class="save-button" type="submit"><p>SAVE</p></button>
                </form>
            <% } %>
            <% if(changingFirstname == false) { %> 
                <p class="userinfo">firstname: <%= user.firstname %></p>
                <form action="/user/userpage/change-firstname/<%= user.id %>" method="get">
                    <button class="change" type="submit"><p>change</p></button>
                </form>
            <% } else { %>
                <form action="/user/userpage/change-firstname/<%= user.id %>" method="post">
                    <input type="text" value="<%= user.firstname %>" name="firstname">
                    <button class="save-button" type="submit"><p>SAVE</p></button>
                </form>
            <% } %>
            <% if(changingLastname == false) { %> 
                <p class="userinfo">lastname: <%= user.lastname %></p>
                <form action="/user/userpage/change-lastname/<%= user.id %>" method="get">
                    <button class="change" type="submit"><p>change</p></button>
                </form>
            <% } else { %>
                <form action="/user/userpage/change-lastname/<%= user.id %>" method="post">
                    <input type="text" value="<%= user.lastname %>" name="lastname">
                    <button class="save-button" type="submit"><p>SAVE</p></button>
                </form>
            <% } %>
            <% if(changingEmail == false) { %> 
                <p class="userinfo">email: <%= user.email %></p>
                <form action="/user/userpage/change-email/<%= user.id %>" method="get">
                    <button class="change" type="submit"><p>change</p></button>
                </form>
            <% } else { %>
                <form action="/user/userpage/change-email/<%= user.id %>" method="post">
                    <input type="text" value="<%= user.email %>" name="email">
                    <button class="save-button" type="submit"><p>SAVE</p></button>
                </form>
            <% } %>
        </div>
    </div>
</body>
</html>